{% extends 'base.html.twig' %}

{% block title %}نمایش دسته بندی ها{% endblock %}

{% block product_menu %}
    <li class="active">
        <a href="#"><i class="fa fa-bar-chart-o fa-fw"></i> محصولات<span class="fa arrow"></span></a>
        <ul class="nav nav-second-level">
            <li>
                <a href="{{ path('product_new') }}">افزودن محصول</a>
            </li>
            <li>
                <a href="{{ path('product_index') }}">نمایش محصولات</a>
            </li>
            <li class="active">
                <a href="#"><i class="fa fa-bar-chart-o fa-fw"></i> دسته بندی<span class="fa arrow"></span></a>
                <ul class="nav nav-second-level">
                    <li>
                        <a href="{{ path('category_new') }}">افزودن دسته بندی</a>
                    </li>
                    <li>
                        <a class="active" href="{{ path('category_index') }}">نمایش دسته بندی</a>
                    </li>
                </ul>
            </li>
        </ul>
        <!-- /.nav-second-level -->
    </li>
{% endblock %}

{% block container %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">جدول نمایش دسته بندی ها</div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Extra</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for category in categories %}
                                <tr class="odd gradeX">
                                    <td><a href="{{ path('category_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                                    <td>{{ category.name }}</td>
                                    <td>{% if category.extra %}{{ category.extra|join(', ') }}{% endif %}</td>
                                    <td>
                                        <ul>
                                            <li>
                                                <a href="{{ path('category_show', { 'id': category.id }) }}">show</a>
                                            </li>
                                            <li>
                                                <a href="{{ path('category_edit', { 'id': category.id }) }}">edit</a>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                    <div class="well">
                        <!--pagination-->
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
{% endblock %}
