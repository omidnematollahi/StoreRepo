{% extends 'base.html.twig' %}

{% block container %}
    <h1>Category</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Extra</th>
                <td>{% if category.extra %}{{ category.extra|join(', ') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Lft</th>
                <td>{{ category.lft }}</td>
            </tr>
            <tr>
                <th>Lvl</th>
                <td>{{ category.lvl }}</td>
            </tr>
            <tr>
                <th>Rgt</th>
                <td>{{ category.rgt }}</td>
            </tr>
            <tr>
                <th>Root</th>
                <td>{{ category.root }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('category_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('category_edit', { 'id': category.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
