{% extends 'base.html.twig' %}

{% block title %}نمایش کاربران{% endblock %}

{% block user_menu %}
    <li class="active">
        <a href="#"><i class="fa fa-wrench fa-fw"></i> مدیریت کاربران<span class="fa arrow"></span></a>
        <ul class="nav nav-second-level">
            <li>
                <a href="#">افزودن کاربر</a>
            </li>
            <li>
                <a class="active" href="#">نمایش کاربران</a>
            </li>
        </ul>
        <!-- /.nav-second-level -->
    </li>
{% endblock %}

{% block container %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">جدول نمایش کاربران</div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>username</th>
                                <th>email</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for user in users %}
                                <tr class="odd gradeX">
                                    <td>{{ user.id }}</td>
                                    <td>{{ user.username }}</td>
                                    <td>{{ user.email }}</td>
                                    <td><a href="{{ path('user_delete', {'id': user.getId()}) }}">delete</a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                    <div class="well">
                        <!--pagination-->
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
{% endblock %}
